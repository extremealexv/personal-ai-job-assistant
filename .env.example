# Personal AI Job Assistant - Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql://ai_job_user:your_password_here@localhost:5432/ai_job_assistant
DATABASE_ASYNC_URL=postgresql+asyncpg://ai_job_user:your_password_here@localhost:5432/ai_job_assistant

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Application Configuration
# ============================================================================
APP_ENV=development
SECRET_KEY=generate-with-python-secrets-token-urlsafe-32
DEBUG=true
LOG_LEVEL=INFO

# ============================================================================
# Security & Encryption
# ============================================================================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=generate-with-fernet-generate-key

# ============================================================================
# AI Service Configuration
# ============================================================================
# OpenAI API Key (required for resume tailoring and cover letter generation)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000

# ============================================================================
# OAuth & External Services
# ============================================================================
# Gmail API (for email integration)
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret

# Google Calendar API (for interview scheduling)
GOOGLE_CALENDAR_CLIENT_ID=your-calendar-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-calendar-client-secret

# ============================================================================
# Frontend Configuration
# ============================================================================
VITE_API_BASE_URL=http://localhost:8000
VITE_APP_NAME=Personal AI Job Assistant
VITE_APP_VERSION=0.1.0

# ============================================================================
# CORS Configuration (Development)
# ============================================================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================================
# Session Configuration
# ============================================================================
SESSION_TIMEOUT_HOURS=24
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS

# ============================================================================
# File Upload Configuration
# ============================================================================
MAX_UPLOAD_SIZE_MB=10
UPLOAD_DIR=./uploads

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_PER_MINUTE=60
