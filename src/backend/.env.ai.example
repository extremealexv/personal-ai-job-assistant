# ============================================
# AI Provider Configuration
# ============================================

# Choose AI provider: 'gemini' or 'openai'
AI_PROVIDER=gemini

# ============================================
# Google Gemini Configuration (FREE)
# ============================================
# Get your FREE API key from: https://makersuite.google.com/app/apikey
# Free tier: 60 requests per minute, no expiration!

GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro  # or gemini-1.5-pro, gemini-1.5-flash
GEMINI_MAX_TOKENS=4000
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_RETRIES=3

# ============================================
# OpenAI Configuration (Optional)
# ============================================
# Only needed if AI_PROVIDER=openai
# Get API key from: https://platform.openai.com/api-keys

OPENAI_API_KEY=your_openai_api_key_here  # Optional
OPENAI_MODEL=gpt-3.5-turbo  # or gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30
OPENAI_MAX_RETRIES=3

# ============================================
# Example Usage:
# ============================================
# For FREE development:
#   AI_PROVIDER=gemini
#   GEMINI_API_KEY=AIza...your_key_here
#
# For paid OpenAI:
#   AI_PROVIDER=openai
#   OPENAI_API_KEY=sk-...your_key_here
# ============================================
